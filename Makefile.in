all: QobiScheme stalingrad

targets:
	@echo QobiScheme
	@echo stalingrad


QobiScheme:
	$(MAKE) -C QobiScheme all

stalingrad: QobiScheme
	$(MAKE) -C source all

test:
	./tools/test-driver '(run-tests! (all-expectations))'

par-test:
	./tools/test-driver '(record-expectations! (all-expectations))'
	$(MAKE) -C test-runs all
	find test-runs -name "*.fail" -not -empty -printf '\n\n%f:\n\n' -exec cat '{}' \;
	@echo `find test-runs -name "*.fail" | wc -l` tests\, `find test-runs -name "*.fail" -not -empty -print | wc -l` failures\.

Makefile: Makefile.in
	./config.status

.PHONY: all targets QobiScheme stalingrad test par-test
