all: QobiScheme stalingrad

targets:
	@echo QobiScheme
	@echo stalingrad


QobiScheme:
	$(MAKE) -C QobiScheme all

stalingrad: QobiScheme
	$(MAKE) -C source all

test:
	./tools/test-driver '(parse-and-run-tests!)'

par-test:
	./tools/test-driver '(parse-and-record-expectations!)'
	$(MAKE) -C test-runs all
#	find test-runs -name "*.fail" -empty -delete
	find test-runs -name "*.fail" -not -empty -printf '\n\n%f:\n\n' -exec cat '{}' \;

Makefile: Makefile.in
	./config.status

.PHONY: all targets QobiScheme stalingrad test par-test
