(include "j")

(define (derivative-using-j* f)
 (let ((f-forward (j* f)))
  (lambda (x) (forward-adjoint (f-forward (forward-conjoin x 1))))))

(define (derivative-using-*j f)
 (let ((f-reverse (*j f))) (lambda (x) (cdr ((cdr (f-reverse x)) 1)))))

(define (bug x)
 (letrec ((g (lambda (y) x))
	  (f (lambda (y) (g 0))))
  (f 0)))

(*j bug)

(bug 4)

((derivative-using-j* bug) 4)

((derivative-using-*j bug) 4)
